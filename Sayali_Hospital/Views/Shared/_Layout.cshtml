<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sayali_Hospital</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/css/about.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/Sayali_Hospital.styles.css" asp-append-version="true" />
      <script src="~/js/site.js"></script>   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="about.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
          integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
          rel="stylesheet" />
</head>
<body>
    <header>
        <div class="container">
            <nav>
                <div class="logo ">
                    <a asp-controller="Home" asp-action="Index">Sayali Hospital</a>
                </div>

                <div class="menu-items">
                    <a asp-controller="Home" asp-action="Events">Events</a>
                    <a asp-controller="Home" asp-action="Services">Services</a>
                    <a asp-controller="Home" asp-action="AboutUs">About Us</a>
                    <a asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                </div>
            </nav>
        </div>
    </header>

    <div >
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <a href="#" class="back-to-top" id="backToTop">
        <i class="fa-solid fa-circle-chevron-up  fa-2xl"
           style="color: #7362e4"></i>
    </a>
    <footer >
        <div class="footer-content">
            <div class="footer-section about">
                <h3>Sayali Hospital</h3>
                <p>
                    Sayali Hospital is dedicated to providing top-notch healthcare
                    services with a focus on patient comfort and well-being. Our team
                    of experienced professionals is here to serve you 24/7.
                </p>
                <div class="foot-ico">
                    <a href="#">
                        <i class="fa-brands fa-instagram fs-1 me-1"
                           style="color: #7362e4"></i>
                    </a>
                    <a href="#">
                        <i class="fa-brands fa-square-facebook fs-1 ms-1"
                           style="color: #7362e4"></i>
                    </a>
                    <a href="#">
                        <i class="fa-brands fa-linkedin fs-1 ms-1"
                           style="color: #7362e4"></i>
                    </a>
                    <a href="#">
                        <i class="fa-brands fa-x-twitter  fs-1" style="color:  #7362e4;"></i>
                    </a>
                </div>

            </div>
            <div class="footer-section links">
                <h4>Quick Links</h4>

                <ul>
                    <li class="li-flex">
                        
                       
                        <a asp-controller="Home" asp-action="Index" class="col-md-3">Home</a>
                        <a asp-controller="Home" asp-action="Events" class="col-md-3" >Events</a>
                        <a asp-controller="Home" asp-action="AboutUs" class="col-md-3">About Us</a>

                       
                    </li>
                    <li class="li-flex">

                        <a asp-controller="Home" asp-action="Services" class="col-md-3">Services</a>
                        <a asp-controller="Home" asp-action="Contact" class="col-md-3">Contact Us</a>
                    </li>
                </ul>

            </div>
            <div class="footer-section contact-form ">
               

                <div class="add-logo">
                    <h4> <i class="fa-solid fa-location-dot fa-xl  ps-1" style="color: #7362e4; margin-right: 32px;"></i> </h4>
                    <div>
                        <h4>Address</h4>
                        <p>
                            Husainabad,Shiv Panchayat Nagar,
                            Kamptee,Maharashtra
                            441001
                        </p>
                    </div>
                </div>

                <div class="add-logo">
                    <h4><i class="fa-solid fa-phone fa-xl me-4" style="color: #7362e4;"></i></h4>
                    <div>
                        <h4>Contact</h4>
                        <p>+91-8123849982</p>
                    </div>
                </div>



                <div class="add-logo">
                    <h4><i class="fa-solid fa-envelope fa-xl me-4" style="color: #7362e4;"></i></h4>
                    <div>
                        <h4>Email</h4>
                        <p>sayalihospital71@gmail.com</p>
                    </div>
                </div>
            </div>



        </div>

        

        <div class="footer-bottom">
            &copy; 2024 Sayali Hospital | Designed by Your Name
            <hr />

        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
            @await   RenderSectionAsync("Styles", required: false)


</body>
</html>
